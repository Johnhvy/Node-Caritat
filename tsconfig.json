{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./packages/dist",
    "moduleResolution": "node",
    "watch": true,
    "rootDir": "./packages/",
    "baseUrl": "./packages/",
    "paths": {
      "@aduh95/caritat/*": ["./core/src/*"],
      "@aduh95/caritat-crypto/*": ["./crypto/src/*"]
    }
  },
  "include": ["./packages/**/*.ts"]
}
