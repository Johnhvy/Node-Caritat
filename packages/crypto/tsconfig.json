{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "watch": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@aduh95/caritat/*": ["../core/src/*"],
      "@aduh95/caritat-crypto/*": ["../crypto/src/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
