{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noEmit": true,
      "composite": true,
      "target": "ESNext",
      "module": "ESNext",
      "outDir": "./dist",
      "moduleResolution": "node",
      "watch": true,
      "rootDir": "../..",
      "baseUrl": "..",
      "paths": {
        "@node-core/caritat/*": ["../core/src/*"],
        "@node-core/caritat-crypto/*": ["../crypto/src/*"]
      }
    },
    "include": ["./*.ts"],
    "references": [{ "path": "../../.." }]
  }
  